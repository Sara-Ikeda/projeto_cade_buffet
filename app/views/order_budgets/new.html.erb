<div>
  <h1>Or√ßamento Final</h1>

  <div>
    <% if @order_budget.errors.any? %>
      <strong>Verifique os campos:</strong>
      <ul>
        <% @order_budget.errors.full_messages.each do |msg| %>
          <li><%= msg %>!</li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <%= form_with model: [@order, @order_budget] do |f| %>
    <div>
      <%= f.label :deadline %>
      <%= f.date_field :deadline %>
    </div>
    <div>
      <%= f.label :rate %>
      <%= f.collection_radio_buttons :rate, @order_budget.human_attribute_rates, :first, :last %>
    </div>
    <div>
      <%= f.label :rate_value %>
      <%= f.number_field :rate_value %>
    </div>
    <div>
      <%= f.label :rate_description %>
      <%= f.text_field :rate_description %>
    </div>
    <div>
      <%= f.label :payment_options %>
      <%= f.text_field :payment_options %>
    </div>
    <%= f.submit 'Aprovar' %>
  <% end %>
</div>