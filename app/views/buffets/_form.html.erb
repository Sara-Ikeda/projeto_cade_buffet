<%= form_with model: @buffet do |f| %>
  <div>
    <%= f.label :trade_name %>
    <%= f.text_field :trade_name %>
  </div>
  <div>
    <%= f.label :company_name %>
    <%= f.text_field :company_name %>
  </div>
  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :telephone %>
    <%= f.telephone_field :telephone %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :payment_types %>
    <%= f.text_field :payment_types %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <%= fields_for @address do |ff| %>
    <div>
      <%= ff.label :street %>
      <%= ff.text_field :street %>
    </div>
    <div>
      <%= ff.label :number %>
      <%= ff.number_field :number %>
    </div>
    <div>
      <%= ff.label :district %>
      <%= ff.text_field :district %>
    </div>
    <div>
      <%= ff.label :city %>
      <%= ff.text_field :city %>
    </div>
    <div>
      <%= ff.label :state %>
      <%= ff.text_field :state %>
    </div>
    <div>
      <%= ff.label :zip %>
      <%= ff.text_field :zip %>
    </div>
  <% end %>
  <%= f.submit 'Salvar' %>
<% end %>