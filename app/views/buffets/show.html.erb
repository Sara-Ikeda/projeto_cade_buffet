<div>
  <h2><%= @buffet.trade_name %> - <%= @buffet.registration_number %></h2>
  <h3><%= @buffet.description %></h3>
  <ul>
    <li>
      <strong>Contato: </strong><%= @buffet.contact %>
    </li>
    <li>
      <strong>Endereço: </strong><%= @buffet.address.path %>.
    </li>
    <li>
      <strong>Cidade/UF: </strong><%= @buffet.address.city %>/<%= @buffet.address.state %>. CEP: <%= @buffet.address.zip %>
    </li>
    <li>
      <strong>Tipos de Pagamento: </strong><%= @buffet.payment_types %>
    </li>
  </ul>
  <%= button_to 'Editar', edit_buffet_path(@buffet), method: :get if @buffet.owner == current_owner %>
</div>

<div>
  <% if @buffet.events.empty? %>
    <p>Não há tipos de eventos cadastrados para esse Buffet!</p>
  <% else %>
    <div>
      <% @buffet.events.each do |event| %>
        <h2><strong><%= link_to event.name, event_path(event) %></strong></h2>
        <h3><%= event.event_description %></h3>
      <% end %>
    </div>
  <% end %>
  <%= button_to 'Adicionar Evento', new_event_path, method: :get if @buffet.owner == current_owner %>
</div>