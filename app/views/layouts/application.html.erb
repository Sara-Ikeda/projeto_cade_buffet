<!DOCTYPE html>
<html>
  <head>
    <title>Buffet</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
      <%= link_to root_path do %>
        <h1>CadÃª Buffet?</h1>
      <% end %>
    </header>
    <nav>
      <%= link_to 'Buffets', buffets_path %></h3>
      <div id="owner_sign_in">
      <% unless owner_signed_in? %>
        <strong>Dono de Buffet?</strong><%= link_to 'Entrar', new_owner_session_path %>
      <% else owner_signed_in? %>
        <%= current_owner.email %>
        <% if current_owner.buffet.present? && current_owner.buffet.valid? %>
          | <%= link_to 'Meu Buffet', buffet_path(current_owner.buffet) %>
        <% end %>
        <%= button_to 'Sair', destroy_owner_session_path, method: :delete %>
      <% end %>
      </div>
    </nav>
  
    <main>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </main>
  </body>
</html>
